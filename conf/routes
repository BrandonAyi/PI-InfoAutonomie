# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                               controllers.Application.index()

# pages
GET        /init                           controllers.Application.init()
GET        /data                           controllers.Application.data()
GET        /oldEvents                      controllers.Application.oldEvents()
GET        /live                           controllers.Application.liveStream()
GET        /createEvent                    controllers.Application.createEvent()

GET        /computeEvent                   controllers.EventController.index()
GET        /testEvent                      controllers.EventController.test()
GET        /listEvents                     controllers.EventController.listEvents()

# JS
GET        /assets.javascript.ws.js        controllers.Application.liveStreamJS()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                   controllers.Assets.at(path="/public", file)
