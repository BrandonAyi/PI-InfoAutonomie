# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                               controllers.Application.index()

# Pages
GET        /init                           controllers.Application.init()
GET        /createEvent                    controllers.Application.createEvent()

# Raw values
GET        /raw/data                       controllers.Application.data()
GET        /raw/graph                      controllers.Application.oldEvents()
GET        /raw/live                       controllers.Application.liveStream()

# Basic events
GET        /basic/data                     controllers.BasicEventController.data()
GET        /basic/graph                    controllers.BasicEventController.graph()

# Events
GET        /computeEvent                   controllers.EventController.index()
GET        /testEvent                      controllers.EventController.test()
GET        /listEvents                     controllers.EventController.listEvents()

# JS
GET        /assets.javascript.ws.js        controllers.Application.liveStreamJS()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                   controllers.Assets.at(path="/public", file)


# API

GET           /data                                controllers.DataController.getUsers
GET           /data/:id                            controllers.DataController.getUser(id: Long)
POST          /data                                controllers.DataController.createData
PUT           /data/:id                            controllers.DataController.updateUser(id: Long)
DELETE        /data/:timestamp/:mote/:label        controllers.DataController.deleteData(timestamp: Long, mote: String, label: String)